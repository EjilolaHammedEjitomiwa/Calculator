<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff012634"
    tools:context=".MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:onClick="clickEvents"
                android:id="@+id/btn00"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:background="@drawable/btn_ripple_border_black"
                android:fontFamily="cursive"
                android:text="00"
                android:textColor="#ffffff"
                android:textSize="30sp" />

            <Button
                android:onClick="clickEvents"
                android:id="@+id/btnSqrt"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/btn_ripple_border_black"
                android:fontFamily="cursive"
                android:text="\u221A"
                android:textColor="#ffffff"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnPercent"
                android:onClick="clickEvents"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/btn_ripple_border_black"
                android:fontFamily="cursive"
                android:text="%"
                android:textColor="#ffffff"
                android:textSize="30sp" />

            <Button
                android:onClick="clickEvents"
                android:id="@+id/btnDel"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/btn_ripple_border_red"
                android:fontFamily="cursive"
                android:text="C"
                android:textColor="#ffffff"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn7"
                android:onClick="clickEvents"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:background="@drawable/btn_ripple_border_black"
                android:fontFamily="cursive"
                android:text="7"
                android:textColor="#ffffff"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn8"
                android:onClick="clickEvents"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/btn_ripple_border_black"
                android:fontFamily="cursive"
                android:text="8"
                android:textColor="#ffffff"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:onClick="clickEvents"
                android:background="@drawable/btn_ripple_border_black"
                android:fontFamily="cursive"
                android:text="9"
                android:textColor="#ffffff"
                android:textSize="30sp" />

            <Button
                android:onClick="clickEvents"
                android:id="@+id/btnDiv"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/btn_ripple_border_red"
                android:fontFamily="cursive"
               android:text="\u00F7"
                android:textColor="#ffffff"
                android:textSize="30sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn4"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_margin="0dp"
                android:onClick="clickEvents"
                android:layout_weight="1"
                android:background="@drawable/btn_ripple_border_black"
                android:fontFamily="cursive"
                android:text="4"
                android:textColor="#ffffff"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:onClick="clickEvents"
                android:layout_weight="1"
                android:background="@drawable/btn_ripple_border_black"
                android:fontFamily="cursive"
                android:text="5"
                android:textColor="#ffffff"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:onClick="clickEvents"
                android:background="@drawable/btn_ripple_border_black"
                android:fontFamily="cursive"
                android:text="6"
                android:textColor="#ffffff"
                android:textSize="30sp" />

            <Button
                android:onClick="clickEvents"
                android:id="@+id/btnMult"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/btn_ripple_border_red"
                android:fontFamily="cursive"
                android:text="x"
                android:textColor="#ffffff"
                android:textSize="30sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:onClick="clickEvents"
                android:id="@+id/btn1"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:background="@drawable/btn_ripple_border_black"
                android:fontFamily="cursive"
                android:text="1"
                android:textColor="#ffffff"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn2"
                android:onClick="clickEvents"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/btn_ripple_border_black"
                android:fontFamily="cursive"
                android:text="2"
                android:textColor="#ffffff"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn3"
                android:onClick="clickEvents"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/btn_ripple_border_black"
                android:fontFamily="cursive"
                android:text="3"
                android:textColor="#ffffff"
                android:textSize="30sp" />

            <Button
                android:onClick="clickEvents"
                android:id="@+id/btnMinus"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/btn_ripple_border_red"
                android:fontFamily="cursive"
                android:text="-"
                android:textColor="#ffffff"
                android:textSize="30sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:onClick="clickEvents"
                android:id="@+id/btnDot"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:background="@drawable/btn_ripple_border_black"
                android:fontFamily="cursive"
                android:text="."
                android:textColor="#ffffff"
                android:textSize="30sp" />

            <Button
                android:onClick="clickEvents"
                android:id="@+id/btn0"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/btn_ripple_border_black"
                android:fontFamily="cursive"
                android:text="0"
                android:textColor="#ffffff"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnEquals"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/btn_ripple_border_black"
                android:fontFamily="cursive"
                android:text="="
                android:onClick="clickEvents"
                android:textColor="#ffffff"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnPlus"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/btn_ripple_border_red"
                android:fontFamily="cursive"
                android:text="+"
                android:onClick="clickEvents"
                android:textColor="#ffffff"
                android:textSize="30sp" />
        </LinearLayout>


    </LinearLayout>

    <EditText
        android:id="@+id/display_text_field"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/colorPrimary"
        android:clickable="false"
        android:cursorVisible="true"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:fontFamily="cursive"
        android:inputType="textPersonName"
        android:textAlignment="viewEnd"
        android:textColor="#ffffff"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/all_operation_display" />

    <EditText
        android:id="@+id/all_operation_display"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/colorPrimary"
        android:clickable="false"
        android:cursorVisible="true"
        android:ems="10"
        android:focusableInTouchMode="false"
        android:inputType="textPersonName"
        android:textColor="#ffffff"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/result_display"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:background="@color/colorPrimary"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingEnd="15dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="0"
        android:textAlignment="viewEnd"
        android:textColor="@color/red"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/display_text_field" />

</androidx.constraintlayout.widget.ConstraintLayout>